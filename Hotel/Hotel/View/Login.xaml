<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hotel.View.Login">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="#31d6c6" Offset="0.3"/>
            <GradientStop Color="#453999" Offset="1.1"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    
    <ContentPage.Content>
        <StackLayout>
            <Frame CornerRadius="10" x:Name="frm_dados" VerticalOptions="CenterAndExpand">

                <StackLayout>
                    <Label x:Name="lbl_welcome"/>
                    <Button Text="Desconectar" Clicked="Button_Clicked"/>
                </StackLayout>
                
                
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>